<% provide(:title, @quiz.title) %>

<h1><%= @quiz.title %></h1>
<p><%= @quiz.description %></p>
<hr class="separator" />

<% if @quiz.question && @quiz.question.title %>
  <h2 class="question"><%= @quiz.question.title %></h2>
  <div class="form-group">
    <label for="answer">Answer:</label>
    <input type="answer" class="form-control" id="answer" placeholder="Placeholder, add ruby form answer field here ...">
  </div>
<% else %>
  <h2 class="question">No question available at this time.</h2>
<% end %>
