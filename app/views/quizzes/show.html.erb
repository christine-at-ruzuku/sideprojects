<% provide(:title, quiz.title) %>
<p class="margin-top"><span class="glyphicon glyphicon-chevron-left"></span> <%= link_to "Back to Quizzes", quizzes_path, title: "Back to Quizzes", alt: "Back to Quizzes" %></p>

<h1><%= quiz.title %></h1>
<p><%= quiz.description %></p>
<hr class="separator" />

<% if quiz.questions && quiz.questions.size > 0 %>
  <% quiz.questions.each.with_index(1) do |question, index| %>
    <h2 class="question"><%= index %>. <%= question.title %></h2>
    <% if question.answers && question.answers.size > 0 %>
      <h4>Answer(s):</h4>
      <ul>
      <% question.answers.each do |answer| %>
        <li class="answer">
          <%= answer.text %>
          <% if answer.selected %><span class="selected glyphicon glyphicon-ok-sign"></span><% end %></li>
      <% end %>
      </ul>
    <% else %>
      <p>No answer available at this time.</p>
    <% end %>
  <% end %>
<% else %>
  <h2 class="question">No question available at this time.</h2>
<% end %>
